{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "types": ["node"],
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "outDir": "dist"
  },
  "include": ["api/src/**/*.ts"],
  "exclude": ["node_modules"]
}
